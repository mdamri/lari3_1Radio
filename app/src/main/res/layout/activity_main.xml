
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/dra"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="340dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:src="@drawable/ii"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/textView" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:textStyle="italic"

        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Radio-TN"
        android:id="@+id/textView2"
        android:textSize="50dp"
        android:textIsSelectable="false"
        android:textColor="#7a7676"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:text="Comme son indiqué vous retrouvez dans l'application Radio-TN tout les radios de la Tunisie.Elle vous donne méme l'accée au vidéo Streaming.Find us under: facebook:https://www.facebook.com/StationRadio-792332527544667/?fref=ts"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:textSize="25dp"
        android:textIsSelectable="false"
        android:textColor="#080808"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>