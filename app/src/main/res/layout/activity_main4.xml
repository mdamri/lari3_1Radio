<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#c1bca3">

    <TextView
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" Shems FM"
        android:id="@+id/textView"
        android:allowUndo="false"
        android:autoText="false"
        android:textAlignment="center"
        android:textColor="#f11a1a8b"
        android:textSize="40dp"
        android:textIsSelectable="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="170dp"
        android:id="@+id/imageView"
        android:src="@mipmap/shems"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Radio Shems fm Tunisie a commencé à émettre le 27 septembre 2010. Shems FM est une radio privée tunisienne qui diffuse dans plusieurs villes principalement les régions de Tunis, Sousse, Sfax et Gafsa..  "
        android:id="@+id/textView2"
        android:textSize="22dp"
        android:textIsSelectable="true"
        android:textColor="#000709"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textAlignment="textStart"
        android:layout_below="@+id/imageButton"
        android:background="#c1bca3" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton"
        android:src="@mipmap/imgpl"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton2"
        android:src="@mipmap/imgst"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton3"
        android:layout_above="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:src="@mipmap/map" />
</RelativeLayout>